{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Homepage is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public", 
            "rule": "public"
          }
        ]
      }
    }
  },
  "/callback": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Callback page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/pipeline": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view pipeline",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/contacts": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view contacts",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/contacts/:id": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view contact details",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/deals": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view deals",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/deals/:id": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view deal details",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/dashboard": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view dashboard",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  }
}